{
  "name": "docsense-backend",
  "version": "1.0.0",
  "description": "DocSense Backend - MERN app with role-based authentication",
  "main": "src/index.js",
  "type": "module",
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "seed:superuser": "node src/scripts/seedSuperuser.js",
    "seed:roles": "node src/scripts/seedRoles.js",
    "seed:all": "npm run seed:roles && npm run seed:superuser",
    "refresh:role-counts": "node src/scripts/refreshRoleCounts.js"
  },
  "dependencies": {
    "express": "^4.18.2",
    "mongoose": "^8.0.3",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "cookie-parser": "^1.4.6",
    "helmet": "^7.1.0",
    "cors": "^2.8.5",
    "express-rate-limit": "^7.1.5",
    "express-mongo-sanitize": "^2.2.0",
    "joi": "^17.11.0",
    "dotenv": "^16.3.1",
    "express-validator": "^7.0.1",
    "multer": "^1.4.5-lts.1",
    "pdf-parse": "^1.1.1",
    "mammoth": "^1.6.0",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "nodemon": "^3.0.2"
  },
  "keywords": ["mern", "authentication", "jwt", "mongodb", "express"],
  "author": "DocSense Team",
  "license": "MIT"
